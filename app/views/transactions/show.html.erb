<div class="ls-box-group">
  <div class="ls-box ls-md-space">
    <div class="row">
      <div class="col-md-2 ls-txt-center">
      <span class="ls-ico-alone ls-ico-stats"></span>
      </div>
    <div class="col-md-10">

      <h3 style="font-size: 20px;">Identificador</h3>
      <p><%= @transaction.id %></p>
      <br>
      <h3 style="font-size: 20px;">Usuário</h3>
      <p><%= @transaction.user.email %></p>
      <br>
      <h3 style="font-size: 20px;">Quantidade</h3>
      <p><%= format("%.2f", @transaction.amount) %> </p>
      <br>
      <h3 style="font-size: 20px;">Moeda</h3>
      <p><%= @transaction.translate_to_pt(@transaction.currency) %></p>
      <br>
      <h3 style="font-size: 20px;">Cotação</h3>
      <p><%= "$ #{format("%.2f", @transaction.quotation)}" %></p>
      <br>
      <h3 style="font-size: 20px;">Tipo</h3>
      <p><%= @transaction.translate_to_pt(@transaction.transaction_type)%></p>
      <br>
      <h3 style="font-size: 20px;">Data</h3>
      <p><%= @transaction.created_at.strftime('%d/%m/%Y') %></p>
      <br>
      <h3 style="font-size: 20px;">Total</h3>
      <p><%= "$ #{format("%.2f", @transaction.total)}" %></p>
      <br>
      <%= link_to 'Editar', edit_transaction_path(@transaction), class: 'ls-btn ls-btn-lg ls-color-success' %>
      <%= link_to 'Apagar', transaction_path(@transaction), method: :delete, class: 'ls-btn ls-btn-lg ls-btn-danger' %>
      <%= link_to 'Voltar', root_path, class: 'ls-btn ls-btn-lg' %>
    </div>
   </div>
  </div>
</div>
